APP_NAME=Receipt Management API
DEBUG=true
SECRET_KEY=your-super-secret-key-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# PostgreSQL settings (for Docker)
POSTGRES_HOST=db
POSTGRES_USER=receipts_user
POSTGRES_PASSWORD=receipts_pass
POSTGRES_DB=receipts_db
PG_HOST_PORT=5432

# Database URL for Docker environment
DATABASE_URL=postgresql+asyncpg://receipts_user:receipts_pass@db:5432/receipts_db

# Local development overrides (uncomment for local development)
# POSTGRES_HOST=localhost
# DATABASE_URL=postgresql+asyncpg://receipts_user:receipts_pass@localhost:5432/receipts_db
